@model MoviesWebApp.Models.Movie

<h1>Create movie page</h1>
<form id="create-form" class="form-control" asp-controller="Movies" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-group mt-1">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mt-1">
        <label asp-for="Genre" class="control-label"></label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    
    <div class="form-group mt-1">
        <label asp-for="Director" class="control-label"></label>
        <input asp-for="Director" class="form-control" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>
    
    @* <div class="form-group mt-1"> *@
    @*     <label asp-for="Actors" class="control-label"></label> *@
    @*     <input asp-for="Actors" class="form-control" /> *@
    @*     <input asp-for="Actors" class="form-control" /> *@
    @*     <span asp-validation-for="Actors" class="text-danger"></span> *@
    @* </div> *@
    <div class="form-group mt-1">
        <label asp-for="Year" class="control-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validatiosdadsan-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group mt-1">
        <button id="clear-btn" class="btn btn-outline-info">Clear</button>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>


@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        document.getElementById('clear-btn').addEventListener('click', (e) => {
                document.getElementById('create-form').reset();
                document.querySelectorAll(".text-danger").forEach(el => el.textContent = "");
            
        })
    </script>
}



    

