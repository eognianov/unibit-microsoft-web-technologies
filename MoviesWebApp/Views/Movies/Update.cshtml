@model MoviesWebApp.Models.Movie

@{
    ViewData["Title"] = "Update Movie";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Update Movie</h4>
        </div>
        <div class="card-body">
            <form asp-controller="Movies" asp-action="Edit" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter movie name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Genre" class="form-label fw-semibold"></label>
                    <input asp-for="Genre" class="form-control" placeholder="Enter genre" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Director" class="form-label fw-semibold"></label>
                    <input asp-for="Director" class="form-control" placeholder="Enter director name" />
                    <span asp-validation-for="Director" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Year" class="form-label fw-semibold"></label>
                    <input asp-for="Year" class="form-control" placeholder="Enter release year" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
