@model MoviesWebApp.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container py-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Delete Movie</h4>
            <i class="bi bi-exclamation-triangle fs-4"></i>
        </div>

        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <h5 class="mb-0"><i class="bi bi-exclamation-circle me-2"></i>Are you sure you want to delete this movie?</h5>
            </div>

            <dl class="row mb-4">
                <dt class="col-sm-3 fw-semibold text-secondary">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">@Html.DisplayNameFor(model => model.Genre)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Genre)</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">@Html.DisplayNameFor(model => model.Director)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Director)</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">@Html.DisplayNameFor(model => model.Year)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Year)</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
